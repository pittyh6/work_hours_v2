<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <title>Login</title>
</head>

<body>
    <%- include('../partials/header') %>
        <main class="container">
            <h1>Welcome</h1>
            <form method="post" action="/login" class="login" id="login">
                <input type="number" name="username" class="userIdLogin" id="userIdLogin" placeholder="Insert your User ID Number">
                <input type="password" name="password" class="passwordLogin" id="passwordLogin" placeholder="Insert your Password">
                <a href="" class="changePassword" id="changePassword">Change Password</a>
                <div class="btns-login">
                    <input type="button" class="btn-login btns" id="btn-login-cancel" value="Cancel">
                    <input type="submit" class="btn-login btns" id="btn-login-submit">
                </div>
            </form>
        </main>

        <!-- FOOTER -->
        <%- include('../partials/footer') %>
</body>

</html>